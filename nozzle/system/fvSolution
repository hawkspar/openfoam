FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-4;
        relTol          .01;
    }

    "(U|nuTilda)"
    {
        solver          smoothSolver;
        smoother  	GaussSeidel;
	nSweeps	2;
        tolerance       1e-6;
        relTol          .1;
    }
}

SIMPLE
{
    residualControl
    {
        p       1e-4;
        U       1e-6;
        nuTilda 1e-6;
    }

    consistent yes;
    nNonOrthogonalCorrectors 0;
}

relaxationFactors
{
    equations
    {
        U     .95; // 0.9 is more stable but 0.95 more convergent
        ".*"  .95; // 0.9 is more stable but 0.95 more convergent
    }
}

// ************************************************************************* //
